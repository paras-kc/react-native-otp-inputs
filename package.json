{
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "bugs": "https://github.com/dsznajder/react-native-otp-inputs/issues",
  "contributors": [
    "Micha≈Ç Kantor <kantorm96@gmail.com>",
    "Vishal Rawat <vishalvr.2595@gmail.com>"
  ],
  "description": "One-time password inputs built in pure JS for React-Native",
  "homepage": "https://github.com/dsznajder/react-native-otp-inputs",
  "license": "MIT",
  "name": "react-native-otp-inputs",
  "repository": {
    "type": "git",
    "url": "https://github.com/dsznajder/react-native-otp-inputs"
  },
  "version": "3.3.2",
  "main": "lib/module/index.js",
  "scripts": {
    "clean": "del lib",
    "lint": "eslint --ext '.js,.ts,.tsx' .",
    "example": "yarn --cwd Example",
    "typescript": "tsc --noEmit",
    "release": "release-it",
    "test": "jest --updateSnapshot",
    "test:ci": "jest --collectCoverage=true --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "prepare": "yarn clean && bob build"
  },
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "peerDependencies": {
    "react": "*",
    "react-native": ">= 0.57.0 < 1"
  },
  "jest": {
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/preset-typescript": "7.6.0",
    "@react-native-community/bob": "0.7.0",
    "@types/jest": "24.0.18",
    "@types/react": "16.9.2",
    "@types/react-native": "0.60.15",
    "@types/react-test-renderer": "16.9.0",
    "del-cli": "3.0.0",
    "eslint-config-satya164": "2.4.1",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "metro-react-native-babel-preset": "0.56.0",
    "react": "16.8.6",
    "react-native": "0.60.5",
    "react-test-renderer": "16.8.6",
    "release-it": "12.4.1",
    "typescript": "3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typescript"
    }
  },
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "react-native-cardview": "^2.0.3"
  }
}
